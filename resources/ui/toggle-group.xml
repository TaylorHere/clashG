<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="ClashgToggleGroup" parent="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">8</property>
        <property name="halign">center</property>
        <style>
            <class name="boxed-list"/>
        </style>
        <child>
            <object class="GtkToggleButton" id="global">
                <property name="has-frame">false</property>
                <property name="group">global</property>
                <property name="child">
                    <object class="AdwButtonContent">
                        <property name="icon-name">network-transmit-receive</property>
                        <property name="label" translatable="yes">Global</property>
                    </object>
                </property>
            </object>
        </child>
        <child>
            <object class="GtkToggleButton" id="rule">
                <property name="has-frame">false</property>
                <property name="group">global</property>
                <property name="child">
                    <object class="AdwButtonContent">
                        <property name="icon-name">media-playlist-shuffle</property>
                        <property name="label" translatable="yes">Rule</property>
                    </object>
                </property>
            </object>
        </child>
        <child>
            <object class="GtkToggleButton" id="direct">
                <property name="has-frame">false</property>
                <property name="group">global</property>
                <property name="child">
                    <object class="AdwButtonContent">
                        <property name="icon-name">network-error</property>
                        <property name="label" translatable="yes">Direct</property>
                    </object>
                </property>
            </object>
        </child>
    </template>
</interface>