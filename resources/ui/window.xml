<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="ClashGAppWindow" parent="AdwApplicationWindow">
        <property name="title" translatable="yes">ClashG</property>
        <property name="default-width">400</property>
        <property name="default-height">600</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <child>
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                    <object class="AdwHeaderBar">
                        <property name="centering-policy">loose</property>
                        <property name="title-widget">
                            <!--                            <object class="AdwViewSwitcherTitle" id="title">-->
                            <!--                                <property name="stack">stack</property>-->
                            <!--                            </object>-->
                            <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">8</property>
                                <property name="halign">center</property>
                                <style>
                                    <class name="boxed-list"/>
                                </style>
                                <child>
                                    <object class="GtkToggleButton" id="global-button">
                                        <property name="has-frame">false</property>
                                        <property name="group">global-button</property>
                                        <property name="child">
                                            <object class="AdwButtonContent">
                                                <property name="icon-name">network-transmit-receive</property>
                                                <property name="label" translatable="yes">Global</property>
                                            </object>
                                        </property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkToggleButton" id="rule-button">
                                        <property name="has-frame">false</property>
                                        <property name="group">global-button</property>
                                        <property name="child">
                                            <object class="AdwButtonContent">
                                                <property name="icon-name">media-playlist-shuffle</property>
                                                <property name="label" translatable="yes">Rule</property>
                                            </object>
                                        </property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkToggleButton" id="direct-button">
                                        <property name="has-frame">false</property>
                                        <property name="group">global-button</property>
                                        <property name="child">
                                            <object class="AdwButtonContent">
                                                <property name="icon-name">network-error</property>
                                                <property name="label" translatable="yes">Direct</property>
                                            </object>
                                        </property>
                                    </object>
                                </child>
                            </object>
                        </property>
                        <child type="end">
                            <object class="GtkMenuButton" id="gears">
                                <property name="direction">none</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwViewStack" id="stack">
                        <property name="vexpand">False</property>
                        <child>
                            <object class="AdwViewStackPage">
                                <property name="name">proxy</property>
                                <property name="title">Proxy</property>
                                <property name="icon-name">network-workgroup</property>
                                <property name="child">
                                    <object class="ClashgProxyPage"/>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="AdwViewStackPage">
                                <property name="name">connection</property>
                                <property name="title">Connection</property>
                                <property name="icon-name">network-transmit-receive</property>
                                <property name="child">
                                    <object class="AdwStatusPage">
                                        <property name="title">Connection</property>
                                    </object>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="AdwViewStackPage">
                                <property name="name">rule</property>
                                <property name="title">Rule</property>
                                <property name="icon-name">media-playlist-shuffle</property>
                                <property name="child">
                                    <object class="ClashgRulePage" id="rulePage"/>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="AdwViewStackPage">
                                <property name="name">log</property>
                                <property name="title">Log</property>
                                <property name="icon-name">dialog-information</property>
                                <property name="child">
                                    <object class="AdwStatusPage">
                                        <property name="title">Log</property>
                                    </object>
                                </property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="AdwViewSwitcherBar">
                        <property name="stack">stack</property>
                        <property name="reveal">true</property>
                        <!--                        <binding name="reveal">-->
                        <!--                            <lookup name="title-visible">title</lookup>-->
                        <!--                        </binding>-->
                    </object>
                </child>
            </object>
        </child>

    </template>
</interface>
